<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.otherFragments.IconsDetailsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_icon"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            app:cardBackgroundColor="#F1F2F5"
            app:cardCornerRadius="16dp"
            app:cardElevation="12dp">

            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_launcher_background" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_download_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/card_icon"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            app:cardBackgroundColor="#8C88F8"
            app:cardCornerRadius="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_download" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="Download"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_icon_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_download_btn"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/bold_text"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tv_icon_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_icon_name"
            android:layout_alignStart="@id/tv_icon_name"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/light_text" />

        <TextView
            android:id="@+id/tv_icon_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_icon_type"
            android:layout_alignStart="@id/tv_icon_name"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif-medium"
            android:textColor="#8C88F8"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tv_icon_license"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_icon_author"
            android:layout_alignStart="@id/tv_icon_name"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/light_text" />


    </RelativeLayout>

</ScrollView>