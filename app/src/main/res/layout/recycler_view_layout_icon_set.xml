<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="24dp"
    android:layout_marginEnd="16dp"
    app:cardBackgroundColor="@color/card_background_color"
    app:cardCornerRadius="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_icon_set_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_icon_set_price"
            android:layout_alignBottom="@id/tv_icon_set_price"
            android:layout_marginStart="16dp"
            android:layout_toStartOf="@id/tv_icon_set_price"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_vertical"
            android:text="Food"
            android:textColor="@color/bold_text"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_icon_set_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="sans-serif-medium"
            android:text="20$"
            android:textColor="#3F51B5"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/tv_icon_set_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_icon_set_name"
            android:layout_alignTop="@id/tv_icon_set_author"
            android:layout_alignBottom="@id/tv_icon_set_author"
            android:layout_marginStart="16dp"
            android:fontFamily="sans-serif-medium"
            android:text="Type: Fill"
            android:textColor="@color/light_text"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_icon_set_license"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_icon_set_author"
            android:layout_marginStart="16dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="16dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:text="License: Creative Common License"
            android:textColor="@color/light_text"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_icon_set_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_icon_set_price"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="sans-serif-medium"
            android:text="James Win"
            android:textColor="@color/light_text"
            android:textSize="10sp" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>